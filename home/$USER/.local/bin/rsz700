#!/bin/bash

usage() {
  echo "Usage: $0 [OPTION] [FILE]"
  echo "  -h help     Print this help message"
  echo "  -d dir      Output directory"
  echo "  -w width    Set image width"
  echo "  -m minimum  Is the width minimum? (default: true)"
  echo "  -r remove   Clean up mode (default: true)"
  echo
  exit 1
}

WIDTH="700"
DIR="."
MINIMUM=true
REMOVE=true

NOPTS=0
while getopts "hw:d:mr" opt; do
  case $opt in
    h)
      usage
      ;;
    w)
      WIDTH=${OPTARG}
      NOPTS=$((NOPTS+2))
      ;;
    d)
      DIR=${OPTARG}
      NOPTS=$((NOPTS+2))
      ;;
    m)
      MINIMUM=false
      NOPTS=$((NOPTS+1))
      ;;
    r)
      REMOVE=false
      NOPTS=$((NOPTS+1))
      ;;
    ?)
      usage
      ;;
  esac
done
shift $NOPTS

INPT=$1
OUTP=${2:-""}

if [ "$MINIMUM" = true ] ; then
    INPUT_WIDTH=$( identify -format '%w\n' $INPT | head -1 )
    if (( INPUT_WIDTH > WIDTH  )); then
      WIDTH=$INPUT_WIDTH
    fi
fi

if [ -z "$OUTP" ]; then
  EXT="${INPT##*.}"
  MD5=($(md5sum $INPT))
  OUTP=$WIDTH"_"$MD5"."$EXT
fi

OUTPATH=$DIR"/"$OUTP
if [[ "$EXT" == "gif" ]]; then
  TEMP=$DIR"/."$OUTP
  CMD="convert $INPT -coalesce -resize $WIDTH"x" -deconstruct $TEMP"
  echo $CMD
  eval $CMD
  CMD="gifsicle -i $TEMP -O3 --colors 16 --lossy=200 -o $OUTPATH"
  echo $CMD
  eval $CMD
  if [ "$REMOVE" = true ] ; then
    rm $TEMP
  fi
  exit 0
fi

OUTPATH=$DIR"/"$OUTP
CMD="convert -resize $WIDTH"x" $INPT $OUTPATH"
echo $CMD
eval $CMD
exit 0
